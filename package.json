{
  "name": "gmail2gdrive",
  "version": "2.0.0",
  "description": "Gmail2GDrive is a Google Apps Script which automatically stores and sorts Gmail attachments into Google Drive folders, and can also save the thread as a PDF file.",
  "scripts": {
    "build": "tsc && webpack && cp -pr gas/.clasp.json gas/* dist/ && npm run generate-schema",
    "clean": "rm -rf build dist",
    "format": "prettier -w .",
    "generate-schema": "typescript-json-schema tsconfig.json Config --topRef -o schema.json && prettier -w schema.json",
    "lint": "eslint . && npx ajv validate -s schema.json -d docs/config.json --verbose",
    "login": "cd gas && clasp login",
    "pre-commit": "npm run clean && npm run build && npm run test && npm run format && npm run lint",
    "push": "cd dist && clasp push -f",
    "redeploy": "npm run pre-commit && npm run push",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahochsteger/gmail2gdrive.git"
  },
  "keywords": [
    "gmail",
    "gdrive",
    "email",
    "attachment",
    "pdf"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@google/clasp": "^2.4.1",
    "@types/chai": "^4.3.1",
    "@types/dateformat": "^5.0.0",
    "@types/google-apps-script": "^1.0.52",
    "@types/jest": "^28.1.5",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "gas-webpack-plugin": "^2.3.0",
    "jest": "^28.1.2",
    "jest-junit": "^14.0.0",
    "jest-mock-extended": "^2.0.6",
    "json-schema-defaults": "^0.4.0",
    "json-schema-to-typescript": "^11.0.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4",
    "typescript-json-schema": "^0.54.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "private": true,
  "dependencies": {
    "class-transformer": "^0.5.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.34",
    "reflect-metadata": "^0.1.13",
    "relative-time-parser": "^1.0.15"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
