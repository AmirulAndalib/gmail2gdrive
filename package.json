{
  "name": "gmail2gdrive",
  "version": "2.0.0",
  "description": "Gmail2GDrive is a Google Apps Script which automatically stores and sorts Gmail attachments into Google Drive folders, and can also save the thread as a PDF file.",
  "scripts": {
    "build": "tsc && webpack && cp -pr gas/.clasp.json gas/* dist/",
    "clean": "rm -rf build dist",
    "format": "prettier",
    "lint": "eslint",
    "login": "cd gas && clasp login",
    "push": "cd dist && clasp push -f",
    "test": "jest --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahochsteger/gmail2gdrive.git"
  },
  "keywords": [
    "gmail",
    "gdrive",
    "email",
    "attachment",
    "pdf"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@google/clasp": "^2.4.1",
    "@types/chai": "^4.3.1",
    "@types/dateformat": "^5.0.0",
    "@types/expect": "^24.3.0",
    "@types/google-apps-script": "^1.0.47",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "^4.3.6",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-prettier": "^4.0.0",
    "expect": "^28.1.1",
    "gas-webpack-plugin": "^2.2.1",
    "jest": "^28.1.1",
    "jest-junit": "^13.2.0",
    "jest-mock-extended": "^2.0.6",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "private": true,
  "dependencies": {
    "class-transformer": "^0.5.1",
    "dateformat": "^4.6.3",
    "reflect-metadata": "^0.1.13"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
